<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="capstone18_05.google.developers.httpsconsole.badgerbuddy.RemindersScreen">

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="511dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="8dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/Add_reminders"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Reminder"
            android:visibility="visible" />

        <Button
            android:id="@+id/buddy_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Buddies"
            android:visibility="visible" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/remindersview"
        android:layout_width="368dp"
        android:layout_height="397dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/reminders_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/reminder_example2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reminder_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Name"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reminder_description2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Description"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/reminder_location2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Location"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/remove_button_view2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/remove_button2"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Remove" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reminder_example3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reminder_name3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Name"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reminder_description3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Description"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/reminder_location3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Location"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/remove_button_view3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/remove_button3"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Remove" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reminder_example"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reminder_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Name"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reminder_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Description"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/reminder_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Location"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/remove_button_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/remove_button"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Remove" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reminder_example1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reminder_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Name"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reminder_description1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Description"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/reminder_location1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Location"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/remove_button_view1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/remove_button1"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Remove" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
